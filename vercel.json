{
  "functions": {
    "api/*.py": {
      "runtime": "@vercel/python",
      "includeFiles": ["requirements.txt"]
    }
  },
  "routes": [
    {
      "src": "/webhook",
      "dest": "/api/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/main.py"
    }
  ],
  "build": {
    "commands": [
      "pip install -r requirements.txt -t .",
      "echo 'Build process complete!'"
    ]
  }
}
